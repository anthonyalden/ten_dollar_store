}

.bill{
	background-image: url(<%= image_path "ten_dollar_bill.jpg" %>);
	background-repeat: no-repeat;
	background-size: 300px;
	height: 125px;
	width: 300px;
	box-shadow: 10px 10px 5px #5E5959;
	-webkit-box-shadow: 10px 10px 5px #5E5959;

	position: relative;
	margin-left: 465px;
	margin-bottom: -85px;
    clip: border-box;
    transition: background-size 1.2s;
    -webkit-transition: background-size 1.5s;
    transition-timing-function: cubic-bezier(.07,1.41,.82,1.41);
   
}

div:hover {
    background-size: 400px;

}

