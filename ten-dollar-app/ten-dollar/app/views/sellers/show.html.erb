<div class="bill"></div>

<h3 id="tenstore">The Ten Dollar Store </h3>
<h3 id="title">User Name:  <%= @seller.username %></h3>


<% if @seller.items.length > 1 %>
		<p>These are <b><%= @seller.first_name %> <%= @seller.last_name %>'s</b> Items for Sale:</p>
<% end %>

<% if @seller.items.length == 1 %>
	  	<p>These is <b><%= @seller.first_name %> <%= @seller.last_name %>'s</b> Item for Sale:</p>
<% end %>

<% if @seller.items.length == 0 %>
		<p> <b><%= @seller.first_name %> <%= @seller.last_name %>'s</b> Has No Items for Sale:</p>
<% end %>

<ul>
	<% @seller.items.each do |item| %>
		<li>
		<%= link_to item.item_tag, item %>
		<%= item.description %> (<%= link_to "Edit", edit_item_path(item) %>)
			
		</li>
	<% end %>
</ul>

<nav>
  
  
  <%= link_to "Display All Items", items_path, {:style=>'color:black;', :class => "css_class"} %>
</nav>